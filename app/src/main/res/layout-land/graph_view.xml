<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/graph_layout"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <com.jjoe64.graphview.GraphView

        android:layout_width="wrap_content"
        android:layout_height="200dip"
        android:id="@+id/graph"
        android:layout_marginTop="50dp"
        xmlns:android="http://schemas.android.com/apk/res/android" />

    <Button
        android:id="@+id/button_15j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15j"
        android:layout_marginLeft="159dp"
        android:layout_marginStart="159dp"
        android:layout_alignBaseline="@+id/button_30j"
        android:layout_alignBottom="@+id/button_30j"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:id="@+id/button_30j"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="30j"
        android:layout_marginLeft="110dp"
        android:layout_marginStart="110dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/button_15j"
        android:layout_toEndOf="@+id/button_15j"/>

</RelativeLayout>

